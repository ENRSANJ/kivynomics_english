#: import re re


<CournotVentana>:
    name: 'CournotScreen'
    # BoxLayout que contiene ttodo el contenido de la pantalla
    BoxLayout:
        id: all
        # Separador
        BoxLayout:
            size_hint: (.02, 1)

        # BoxLayout con la parte izquierda (de input) de la pantalla
        BoxLayout:
            size_hint: (.6, .7)
            pos_hint: {'center_y': .5}
            padding: '10dp'
            orientation: 'vertical'
            canvas.before:
                Color:
                    rgba: mainbtcolor
                RoundedRectangle:
                    size: self.size
                    pos: self.pos

            # Demanda del mercado
            BoxLayout:
                orientation: 'vertical'

                BoxLayout:
                    Cinput_wrappedlabel:
                        text: 'Market demand function:'

                BoxLayout:
                    Cinput_wrappedlabel2:
                        text: 'p(X)='
                    CournotInput:
                        id: a
                    Cinput_wrappedlabel2:
                        text: '-'
                    CournotInput:
                        id: b
                    Cinput_wrappedlabel2:
                        text: 'X'

            # Costes de la empresa 1
            BoxLayout:
                orientation: 'vertical'

                BoxLayout:
                    Cinput_wrappedlabel:
                        text: 'Total Costs of firm 1:'

                BoxLayout:
                    Cinput_wrappedlabel2:
                        text: 'CT[sub]1[/sub](x[sub]1[/sub])='
                    CournotInput:
                        id: c
                    Cinput_wrappedlabel2:
                        text: 'x[sub]1[/sub]'

            # Costes de la empresa 2
            BoxLayout:
                orientation: 'vertical'

                BoxLayout:
                    Cinput_wrappedlabel:
                        text: 'Total Costs of firm 2:'

                BoxLayout:
                    Cinput_wrappedlabel2:
                        text: 'CT[sub]2[/sub](x[sub]2[/sub])='
                    CournotInput:
                        id: e
                    Cinput_wrappedlabel2:
                        text: 'x[sub]2[/sub]'

            # Botones de acción
            BoxLayout:
                size_hint: (1, .4)
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                spacing: '5dp'

                CournotButton:
                    text: 'Calculate'
                    on_release: root.calcula()

                # Interruptor para seleccionar la opción de exportar a Word
                BoxLayout:
                    orientation: 'vertical'
                    WrappedLabel:
                        text: 'Export '
                        font_size: self.height * 0.55
                    CheckBox:
                        id: a_word


                CournotButton:
                    text: 'Empty'
                    on_release: root.vacia()

                CournotButton:
                    text: 'Random'
                    on_release: root.aleatorio()

        # Separador
        BoxLayout:
            size_hint: (.02, 1)

        # BoxLayout con la parte derecha (de output) de la pantalla
        BoxLayout:
            pos_hint: {'top': .99}
            size_hint:(1, .89)
            orientation: 'vertical'
            canvas.before:
                Color:
                    rgba: mainbtcolor
                RoundedRectangle:
                    size: self.size
                    pos: self.pos

            # BoxLayout con el gráfico
            GrafiCournot:
                id: graficournot
                padding: '5dp'

            # Resumen de resultados del modelo
            BoxLayout:
                orientation: 'vertical'
                size_hint: (1, .4)

                # Separador
                BoxLayout:
                    size_hint: (1, .4)

                # Precio de equilibrio
                BoxLayout:
                    size_hint: (1, .25)
                    WrappedLabel:
                        text: root.precio
                        font_size: self.height * 0.8

                # Resultados de las empresas
                BoxLayout:

                    # EMPRESA 1
                    BoxLayout:
                        orientation: 'vertical'
                        AutoFontLabel:
                            text: root.empresa1
                            markup: True
                            underline: True
                        AutoFontLabel:
                            id: fr1
                            text: 'x[sub]1[/sub](x[sub]2[/sub]) = ' + root.freacc1 + ' - x[sub]2[/sub]/2'
                            markup: True
                        AutoFontLabel:
                            text: root.prod_1
                        AutoFontLabel:
                            text: root.beneficio1

                    # EMPRESA 2
                    BoxLayout:
                        orientation: 'vertical'
                        AutoFontLabel:
                            text: root.empresa2
                            markup: True
                            underline: True
                        AutoFontLabel:
                            id: fr2
                            text: 'x[sub]2[/sub](x[sub]1[/sub]) = ' + root.freacc2 + ' - x[sub]1[/sub]/2'
                            markup: True
                        AutoFontLabel:
                            text: root.prod_2
                        AutoFontLabel:
                            text: root.beneficio2

        # Separador
        BoxLayout:
            size_hint: (.02, 1)

# clase para el estilo de cuadros de input de Cournot
<CournotInput>:
    size_hint: (.2, .7)
    pos_hint: {'center_x': 0.25, 'center_y': 0.5}
    font_size: self.height * 0.5
    multiline: False
    write_tab: False
    padding: [0, (self.height-self.line_height)/2]
    halign: 'center'

<AutoFontLabel@WrappedLabel>:
    font_size: self.height * 0.7

<Cinput_wrappedlabel@WrappedLabel>:
    font_size: self.height * 0.3
    markup: True
    bold: True
    underline: True

<Cinput_wrappedlabel2@WrappedLabel>:
    size_hint: (.2, 1)
    font_size: self.height * 0.35
    markup: True
    bold: True

<CournotMasInfoScreen>:
    name: 'CournotMasInfoScreen'
    Scroll:
        GridLayout:
            cols: 2
            size_hint_y: None
            height: self.minimum_height + 100
            spacing: '10dp'
            padding: '10dp'

            WrappedLabel2:
                size_hint_x: 1.6
                size_hint_y: None
                halign: 'center'
                bold: True
                font_size: self.height*.4
                text: 'COURNOT MODEL'

            WrappedLabel2:
                size_hint_y: None
                halign: 'center'
                bold: True
                font_size: self.height*.3
                text: ''

            Image:
                size_hint_y: None
                size: (1, '400dp')
                source: 'images/cournot_tutorial.jpg'

            WrappedLabel2:
                size_hint_y: None
                height: self.texture_size[1]
                halign: 'justify'
                text: root.a
                bold: True
                font_size: kivy.core.window.Window.height * 0.03
